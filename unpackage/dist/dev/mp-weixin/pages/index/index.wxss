/* 爆火专区 */
.seckill-section {
  padding: 4rpx 30rpx 0rpx;
  margin-bottom: 10rpx;
  background: #fff;
}
.seckill-section .s-header {
  display: flex;
  align-items: center;
  height: 92rpx;
  line-height: 1;
}
.seckill-section .s-header .title {
  color: red;
  font-size: 50rpx;
  font-weight: bold;
}
.seckill-section .floor-list {
  white-space: nowrap;
}
.seckill-section .scoll-wrapper {
  display: flex;
  align-items: flex-start;
}
.seckill-section .floor-item {
  display: flex;
  flex-direction: column;
  width: 150rpx;
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #000;
  line-height: 1.8;
}
.seckill-section .floor-item image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 6rpx;
}
.seckill-section .floor-item .price {
  color: red;
}
.clamp {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  display: block;
}
.container {
  font-size: 14px;
  line-height: 24px;
}
.uni-searchbar {
  padding: 0;
}
