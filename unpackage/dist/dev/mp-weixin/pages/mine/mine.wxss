
.container{
	margin: 10rpx;
}
.img{
	margin-left: 20rpx;
  width: 70px;
  height: 70px;
  overflow: hidden;
  border-radius: 50%;
}
.text{
	margin-left: 40rpx;
	margin-top: 40rpx;
}
.top{
	display: flex;
	flex-direction: row;
	background-color: #fff;
}
.gear{
	position: absolute;
	right: 20rpx;
	top: 50rpx;
}
.bottom{
	margin-top: 10rpx;
	background-color: #fff;
}
.icon{
   border-bottom:1px solid #EDEDED; 
   display: flex;
   padding: 12px 0;
}
.icon image{
   display: block;
   width: 30px;
   height: 30px;
   margin: 0 auto;
   padding-top: 10px;
}
.icon text{
   display: block;
   text-align: center;
   width: 100%;
   font-size: 14px;
   color: #333;
   padding-top: 10px;
}
.icon navigator{
   flex: 1 0 25%;
}
button{
	 padding: 0;
	 margin: 0;
}

