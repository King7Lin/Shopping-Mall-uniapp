.detail {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  margin-bottom: 0rpx;
}
.detail .title {
  font-size: 40rpx;
  margin: 10rpx;
  color: black;
  text-align: justify;
}
.detail .price {
  color: red;
  font-size: 40rpx;
  margin: 10rpx;
}
.goods-carts {
  display: flex;
  flex-direction: column;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
}
.favBtn {
  margin: 0 20rpx 20rpx 0;
  position: absolute;
  right: 0;
}
.ShopName {
  margin: 15rpx;
  display: flex;
  flex-wrap: wrap;
}
.details {
